{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "standard-with-typescript",
    "google"
  ],
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": ["tsconfig.json"]
  },
  "rules": {
    "max-len": [1, 200],
    "require-jsdoc": 0,
    "space-before-function-paren": ["error", "always"],
    "@typescript-eslint/comma-dangle": [2, "always-multiline"],
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "indent": ["error", 2]
  }
}

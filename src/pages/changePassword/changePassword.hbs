<main id="main-content">
    <div class="wrapper">
        <div class="form-template">
            {{> title title="Сменить пароль"}}
            <form method="POST">
                {{> input name="oldPassword" type="password" placeholder="Старый пароль" class="input"}}
                {{> input name="newPassword" type="password" placeholder="Новый пароль" class="input"}}
                {{> link href="/profile" text="Сохранить пароль" class="link__black"}}
            </form>
            {{> link href="/profile" text="Вернуться в профиль"}}
        </div>
    </div>
</main>
